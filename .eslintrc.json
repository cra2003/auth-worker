{
	"env": {
		"browser": false,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
		"no-console": "off",
		"indent": ["error", "tab"],
		"linebreak-style": "off",
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	},
	"ignorePatterns": ["node_modules/", "dist/", ".wrangler/"]
}

